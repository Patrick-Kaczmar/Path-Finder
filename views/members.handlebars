<!DOCTYPE html>
<html lang="en">

<head>
  <title>Passport Authentication</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="stylesheets/style.css" rel="stylesheet">
  <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
</head>

<body>
  <nav class="navbar navbar-expand-sm members-nav">
    <div class="container-fluid nav-flex">
      <a class="navbar-brand" href="/members">
        Pathfinder
        <img src="assets/arrow-icon-white.png" class="d-inline-block align-text-top arrow-icon">
      </a>
      <div id="navbarNav">
        <ul class="navbar-nav">
          <li id="logout-li" class="nav-item">
            <a id="logout" class="nav-link" href="/logout">
              Logout
              <img src="assets/logout-icon.png" class="d-inline-block align-text-top logout-icon">
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  

  <div class="container">
    <div class="row">
      <div class="col">
        <h2 id="welcome-h2">
          <center>Welcome to <span id="welcome">Pathfinder </span><span class="member-name"></span></center>
        </h2>
        <h3 id="explore">
          <center>Explore Activities Near You</center>
        </h3>
      </div>
    </div>
  </div>
  <div class="figure-wrapper">
    <a class="activity-link" id="restaurant" href="/restaurant">
      <figure id="restaurantFig" class="animated animate__bounceInLeft">
        <img class="memberIcons" src="./assets/restaurant-icon.png" alt="restaurant icon">
        <figcaption class="figArea"><span class="iconCaption">Restaurants</span></figcaption>
      </figure>
    </a>
    <a class="activity-link" id="shoppingMall" href="/shoppingMall">
      <figure id="shoppingFig" class="animate__animated animate__bounceInLeft">
        <img class="memberIcons" src="./assets/shopping.png" alt="shopping icon">
        <figcaption class="figArea"><span class="iconCaption">Shopping Malls</span></figcaption>
      </figure>
    </a>
    <a class="activity-link" id="gym" href="/gym">
      <figure id="gymFig">
        <img class="memberIcons" src="./assets/barbell.png" alt="gym icon">
        <figcaption class="figArea"><span class="iconCaption">Gyms</span></figcaption>
      </figure>
    </a>
    <a class="activity-link" id="hospital" href="/hospital">
      <figure id="hospitalFig" class="animate__animated animate__bounceInLeft">
        <img class="memberIcons" src="./assets/hospital.png" alt="hospital icon">
        <figcaption class="figArea"><span class="iconCaption">Hospitals</span></figcaption>
      </figure>
    </a>
    <a class="activity-link" id="park" href="/park">
      <figure id="parksFig" class="animate__animated animate__bounceInLeft">
        <img class="memberIcons" src="./assets/park.png" alt="park icon">
        <figcaption class="figArea"><span class="iconCaption">Parks</span></figcaption>
      </figure>
    </a>
    <a class="activity-link animate__animated animate__bounceInRight animate__slower" href="/zoo" id="zoo">
      <figure id="zooFig">
        <img class="memberIcons" src="./assets/zoo.png" alt="zipline icon">
        <figcaption class="figArea"><span class="iconCaption">Zoos</span></figcaption>
      </figure>
    </a>
  </div>
  
