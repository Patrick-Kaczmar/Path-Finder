<div class="signup-login-background">
  <nav class="signup-login-nav">
    <div class="container-fluid">
      <div class="navbar-header">
        <h1 class="signup-login-h1">Pathfinder<img src="assets/arrow-icon-blue.png" class="signup-login-arrow-icon">
        </h1>
      </div>
    </div>
  </nav>
  <div class="container signup-login-container">
    <div class="row signup-login-content">
      <div class="col-md-7">
        <h2 class="signup-login-h2">Sign Up</h2>
        <form class="signup">
          <div class="form-group">
            <label for="exampleInputEmail1">Email Address</label>
            <input type="email" class="form-control" id="email-input" placeholder="Email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="password-input" placeholder="Password">
          </div>
